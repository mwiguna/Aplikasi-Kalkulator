<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:padding="10dp"
    tools:context="com.example.root.kuis1.ThirdVersion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.02"
                android:onClick="btnC"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="C" />

            <Button
                android:id="@+id/tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="operate"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/angka1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="1" />

            <Button
                android:id="@+id/angka2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="2" />

            <Button
                android:id="@+id/angka3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="3" />

            <Button
                android:id="@+id/kurang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="operate"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/angka4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="4" />

            <Button
                android:id="@+id/angka5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="5" />

            <Button
                android:id="@+id/angka6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="6" />

            <Button
                android:id="@+id/kali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="operate"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/angka7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="7" />

            <Button
                android:id="@+id/angka8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="8" />

            <Button
                android:id="@+id/angka9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="9" />

            <Button
                android:id="@+id/bagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="operate"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text=":" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/comma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="comma"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="." />

            <Button
                android:id="@+id/angka0"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:onClick="btnNum"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="0" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="equal"
                android:paddingBottom="25dp"
                android:paddingTop="25dp"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
